{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "esModuleInterop": true,
  "include": [
    "src/**/*",
    "scripts/*",
    "test/**/*",  
  ]
}